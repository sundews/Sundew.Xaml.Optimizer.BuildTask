<Project Sdk="Microsoft.NET.Sdk">
	
	<PropertyGroup>
    <TargetFrameworks>netstandard2.0;net8.0</TargetFrameworks>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <NuspecFile>Sundew.Xaml.Optimizer.BuildTask.nuspec</NuspecFile>
    <OutputPath>bin\$(Configuration)</OutputPath>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    <IsTool>true</IsTool>
    <IncludeBuildOutput>true</IncludeBuildOutput>
    <DevelopmentDependency>true</DevelopmentDependency>
    <Description>A framework for creating Xaml optimizers for WPF, Avalonia, Maui, WinUI, UWP and Xamarin.Forms.

See following link for samples:
https://github.com/sundews/Sundew.Xaml.Optimizer.Sample
See following link for current optimizations:
https://github.com/sundews/Sundew.Xaml.Optimizations
See following link for implementing custom optimizations:
https://github.com/sundews/Sundew.Xaml.Optimization
    </Description>
    <PackageReleaseNotes>3.0.0 - Changed to .NET Standard 2.0, adds support for Sundew.Xaml.Optimization 3.0.0
2.0.0 - Adds support for Sundew.Xaml.Optimization 2.0.0
1.0.0 - First release
</PackageReleaseNotes>
		<PackageFilesOutputPath>$(BaseIntermediateOutputPath)\$(Configuration)\package</PackageFilesOutputPath>
  </PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <Optimize>true</Optimize>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="build\Sundew.Xaml.Optimizer.BuildTask.targets">
      <PackagePath>build;buildCrossTargeting</PackagePath>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="ILRepack.Lib.MSBuild.Task" >
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.Build.Framework" />
    <PackageReference Include="Microsoft.Build.Utilities.Core" />
    <PackageReference Include="Newtonsoft.Json" />
    <PackageReference Include="Sundew.Base" />
    <PackageReference Include="Sundew.Xaml.Optimization" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Properties\" />
  </ItemGroup>

  <Target Name="SetNuspecProperties" BeforeTargets="GenerateNuspec">
    <PropertyGroup>
      <NuspecProperties>$(NuspecProperties);company=$(Company);description=$(Description);copyright=$(Copyright);authors=$(Authors);version=$(PackageVersion);repositoryUrl=$(RepositoryUrl);releaseNotes=$(PackageReleaseNotes);repositoryType=$(RepositoryType);licenseExpression=$(PackageLicenseExpression);targetFramework=$(TargetFramework);configuration=$(Configuration);projectDir=$(MSBuildProjectDirectory);outputPath=$(OutputPath);packageFiles=$(IntermediateOutputPath)package;supportedOptimizationsVersions=$(SupportedOptimizationsVersions)</NuspecProperties>
    </PropertyGroup>
  </Target>

	<Target Name="CleanPackageDir" BeforeTargets="DispatchToInnerBuilds">
		<RemoveDir Directories="$(PackageFilesOutputPath)" />

	</Target>

	<Target Name="ILRepacker" BeforeTargets="PostBuildEvent" AfterTargets="Build" Condition="$(Configuration.Contains('Release')) AND $(TargetFramework) != ''">
      <ItemGroup>
      <InputAssemblies Include="$(OutputPath)**\*.dll" />
      <OutputAssemblies Include="$(OutputPath)$(AssemblyName).m.dll" />
      <OutputAssemblies Include="$(OutputPath)**\Microsoft.Build*.dll" />
      <OutputAssemblies Include="$(OutputPath)**\System*.dll" />
      <OutputAssemblies Include="$(OutputPath)Sundew.Xaml.Optimization.dll" />
      <InputAssemblies Remove="@(OutputAssemblies)" />
      <InputAssemblies Remove="$(OutputPath)$(AssemblyName).dll" />
		</ItemGroup>

    <ILRepack DebugInfo="true" Parallel="true" Internalize="true" InputAssemblies="$(OutputPath)\$(AssemblyName).dll;@(InputAssemblies)" InternalizeExclude="$(AssemblyName)" TargetKind="Dll" LibraryPath="$(OutputPath)" OutputFile="$(OutputPath)\$(AssemblyName).m.dll" />

    <Copy SourceFiles="@(OutputAssemblies)" DestinationFiles="@(OutputAssemblies->'$(PackageFilesOutputPath)\tools\$(TargetFramework)\%(RecursiveDir)%(Filename)%(Extension)')" ContinueOnError="False" />

  </Target>

  <Target Name="NoILRepacker" BeforeTargets="PostBuildEvent" AfterTargets="Build" Condition="!$(Configuration.Contains('Release'))">
    <ItemGroup>
      <OutputAssemblies Include="$(OutputPath)**\*.dll" />
      <OutputAssemblies Remove="$(OutputPath)$(AssemblyName).m.dll" />
    </ItemGroup>

    <Copy SourceFiles="@(OutputAssemblies)" DestinationFiles="@(OutputAssemblies->'$(PackageFilesOutputPath)\tools\$(TargetFramework)\%(RecursiveDir)%(Filename)%(Extension)')" ContinueOnError="False" />
  </Target>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">

		<ItemGroup>
      <BuildFiles Include="$(MSBuildProjectDirectory)\build\**\*.*" />
      <ContentFiles Include="$(MSBuildProjectDirectory)\content\**\*.*" />
    </ItemGroup>

    <Copy SourceFiles="@(BuildFiles)" DestinationFiles="@(BuildFiles->'$(PackageFilesOutputPath)\build\%(RecursiveDir)%(Filename)%(Extension)')" ContinueOnError="False" />
    <Copy SourceFiles="@(ContentFiles)" DestinationFiles="@(ContentFiles->'$(PackageFilesOutputPath)\content\%(RecursiveDir)%(Filename)%(Extension)')" ContinueOnError="False" />
  </Target>
  
</Project>